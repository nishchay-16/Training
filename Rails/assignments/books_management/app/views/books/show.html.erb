<h2>Books</h2>
<table class="table-container">
  <thead>
    <tr>
      <th> Title </th>
      <th> Author </th>
      <th> Genre </th>  
      <th> Quantity </th>
      <th> Edit </th>
    </tr>
  </thead>
  <tbody>
    <% for book in @books %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.genre %></td>
        <td style="text-align: center"><%= book.quantity %></td>
        <td style="text-align: center">
          <a href="/books/<%= book.id %>/edit">
            <i class="fa-solid fa-pen-to-square"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<a href="/books/new"> Add New Book</a> <br/><br/>
