<h2 style="margin-left: 10px">Books</h2>
<table class="table-container">
  <thead>
    <tr>
      <th> Title </th>
      <th> Author </th>
      <th> Genre </th>  
      <th> Quantity </th>
      <th> Edit (normal) </th>
      <th> Edit (rails) </th>
      <th> Delete </th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.genre %></td>
        <td style="text-align: center"><%= book.quantity %></td>
        <td style="text-align: center">
            <%= link_to "Edit", books_edit_path(book.id) %>
        </td>
        <td style="text-align: center">
          <%# link_to_if(book.quantity < 20, "Edit", rails_books_edit_path(book.id)) %>
          <%# link_to_unless(book.quantity == 14, "Edit", rails_books_edit_path(book.id)) %>
          <%= link_to "Edit", rails_books_edit_path(book.id) %>
        </td>
        <td style="text-align: center">
          <%= link_to "Delete", rails_books_destroy_path(book.id), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<a style="margin-left: 10px" href="/books/new"> Add New Book</a>
<a style="margin-left: 10px" href="/"> Go Back</a>  <br/>

<%= link_to "+ Add New book", rails_new_books_path , style: "margin-left: 10px" %>
<%= link_to "Go Back", root_path , style: "margin-left: 10px" %>

