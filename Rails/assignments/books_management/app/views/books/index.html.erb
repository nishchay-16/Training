<h2 style="margin-left: 10px">Books</h2>
<table class="table-container">
  <thead>
    <tr>
      <th> Title </th>
      <th> Author </th>
      <th> Genre </th>  
      <th> Quantity </th>
      <th> Edit </th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.genre %></td>
        <td style="text-align: center"><%= book.quantity %></td>
        <td style="text-align: center">
          <a href ="/books/<%= book.id %>/edit">
          <%= link_to "Edit", books_edit_path(book.id) %>
            <i class="fa-solid fa-pen-to-square"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<a style="margin-left: 10px" href="/books/new"> Add New Book</a> <br/><br/>
<a style="margin-left: 10px" href="/"> Go Back</a> 
