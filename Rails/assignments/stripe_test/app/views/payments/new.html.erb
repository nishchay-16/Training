<h1>Payment Options</h1>
    <% if flash[:error].present? %>
      <div style="color: red; border: 1px solid red; padding: 10px; margin-bottom: 20px;">
        <strong>Payment failed:</strong> <%= flash[:error] %>
      </div>
    <% end %>

<%= link_to "One-Time Payment", new_payment_path(payment_type: 'one_time'), class: 'btn btn-primary' %><br/><br/>
<%= link_to "Recurring Payment", new_payment_path(payment_type: 'recurring'), class: 'btn btn-primary' %>

<% if params[:payment_type] == 'one_time' %>
  <h2>One-Time Payment Form</h2>
  <%= render 'one_time_payment_form' %>
<% elsif params[:payment_type] == 'recurring' %>
  <h2>Recurring Payment Form</h2>
  <%= render 'recurring_payment_form' %>
<% else %>
  <p>Please select a payment option above.</p>
<% end %>