<h1>New Book</h1>

<%= form_with(model: @book) do |form| %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :quantity %>
    <%= form.text_area :quantity %>
  </div>

  <div class="field">
    <%= form.label :author_id %>
    <%= form.text_area :author_id %>
  </div>

  <div class="field">
    <%= form.label :genre_id %>
    <%= form.text_area :genre_id %>
  </div>

  <div class="actions">
    <%= form.submit "Create Book" %>
  </div>
<% end %>

<%= link_to 'Back', books_path %>
