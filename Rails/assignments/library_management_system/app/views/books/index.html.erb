<h1>Listing Books</h1>
<div id='referralhero-dashboard-MF9b9c94ea62'></div>
<table>
  <thead>
    <tr>
      <th>Author</th>
      <th>Title</th>
      <th>Genre</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.author.author_name %></td>
        <td><%= book.title %></td>
        <td><%= book.genre.genre_name %></td>
        <td><%= book.quantity %></td>
        <td><%= link_to "Show", book %></td>
        <td><%= link_to "Edit", edit_book_path(book) %></td>
        <td><%= link_to "Destroy", book, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "+ Add New book", new_book_path %><br/>
<%= link_to "Go to Rails Homepage", homepage_url %>
